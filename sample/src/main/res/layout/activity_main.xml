<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/v_crash_dp_16"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_crash_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/text_btn_crash_current" />

        <Button
            android:id="@+id/btn_crash_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/v_crash_dp_16"
            android:text="@string/text_btn_crash_next" />

        <Button
            android:id="@+id/btn_crash_action_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/v_crash_dp_16"
            android:text="@string/text_btn_crash_action_custom" />

        <Button
            android:id="@+id/btn_crash_action_custom_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/v_crash_dp_16"
            android:text="@string/text_btn_crash_action_custome_reset" />

        <Button
            android:id="@+id/btn_time_out_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/v_crash_dp_16"
            android:text="@string/text_btn_timeout_exp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>